<h1>Listing text_blocks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @text_blocks.each do |text_block| %>
      <tr>
        <td><%= text_block.name %></td>
        <td><%= text_block.body %></td>
        <td><%= text_block.position %></td>
        <td><%= link_to 'Show', text_block %></td>
        <td><%= link_to 'Edit', edit_text_block_path(text_block) %></td>
        <td><%= link_to 'Destroy', text_block, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

